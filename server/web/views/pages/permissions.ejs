<div class="card">
    <div class="card-header">
        <h2>Permissions</h2>
        <button class="btn" onclick="sendCmd('0xPM')">Refresh</button>
    </div>
    
    <% if (!data.list || data.list.length === 0) { %>
    <p class="empty">Click Refresh to load permissions.</p>
    <% } else { %>
    <div class="perm-grid">
        <% data.list.forEach(p => { 
            const name = p.split('.').pop();
        %>
        <div class="perm-item">
            <span class="perm-icon">âœ“</span>
            <span class="perm-name"><%= name %></span>
        </div>
        <% }) %>
    </div>
    <% } %>
</div>
