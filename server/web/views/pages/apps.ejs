<div class="card">
    <div class="card-header">
        <h2>Installed Apps</h2>
        <div class="btn-group">
            <button class="btn" onclick="sendCmd('0xIN', {includeSystem: false})">User Apps</button>
            <button class="btn" onclick="sendCmd('0xIN', {includeSystem: true})">All Apps</button>
        </div>
    </div>
    
    <% if (!data.list || data.list.length === 0) { %>
    <p class="empty">Click a button to load apps.</p>
    <% } else { %>
    <div class="app-grid">
        <% data.list.forEach(app => { %>
        <div class="app-item">
            <div class="app-name"><%= app.appName %></div>
            <div class="app-pkg"><code><%= app.packageName %></code></div>
            <div class="app-version">v<%= app.versionName %></div>
            <% if (app.isSystem) { %><span class="badge">System</span><% } %>
        </div>
        <% }) %>
    </div>
    <% } %>
</div>
