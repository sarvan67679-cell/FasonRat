<div class="card">
    <h2>Device Information</h2>
    <% const c = data.client; %>
    <div class="info-grid">
        <div class="info-item">
            <label>Device ID</label>
            <span><code><%= c.id %></code></span>
        </div>
        <div class="info-item">
            <label>Status</label>
            <span class="badge <%= c.online ? 'success' : 'error' %>"><%= c.online ? 'Online' : 'Offline' %></span>
        </div>
        <div class="info-item">
            <label>Brand</label>
            <span><%= c.device?.brand || '—' %></span>
        </div>
        <div class="info-item">
            <label>Model</label>
            <span><%= c.device?.model || '—' %></span>
        </div>
        <div class="info-item">
            <label>Android Version</label>
            <span><%= c.device?.version || '—' %></span>
        </div>
        <div class="info-item">
            <label>IP Address</label>
            <span><%= c.ip || '—' %></span>
        </div>
        <div class="info-item">
            <label>Country</label>
            <span><%= c.country || '—' %></span>
        </div>
        <div class="info-item">
            <label>First Seen</label>
            <span><%= new Date(c.firstSeen).toLocaleString() %></span>
        </div>
        <div class="info-item">
            <label>Last Seen</label>
            <span><%= new Date(c.lastSeen).toLocaleString() %></span>
        </div>
    </div>
</div>
